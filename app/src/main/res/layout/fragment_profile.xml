<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/bg_img"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:background="@color/colorMenuBottom"
                />

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:background="@null"
                />

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/profile_img"
                android:textAlignment="center"
                android:textSize="26sp"
                tools:text="Eduardo GÃ³mez Herrera"
                />
            <TextView
                android:id="@+id/txt_ocupation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_user"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="Developer"
                />

            <TextView
                android:id="@+id/txt_work_education"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txt_ocupation"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:text="HITSS - Instituto Politecnico Nacional"
                />

            <ListView
                android:id="@+id/list_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_work_education">
            </ListView>
            <ListView
                android:id="@+id/list_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_experience"
                >
            </ListView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>