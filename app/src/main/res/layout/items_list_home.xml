<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/img_home_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/img_avatar_perfil"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/txt_home_name"

        />


    <TextView
        android:id="@+id/txt_home_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_experience_title"
        android:layout_toRightOf="@+id/img_home_profile"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        tools:text="Alonso Rodriguez Carvajal"
        />

    <TextView
        android:id="@+id/txt_home_workdescrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_home_profile"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/txt_home_name"
        tools:text="IT Recruiter"

        />
    <TextView
        android:id="@+id/txt_home_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_home_profile"
        android:layout_below="@+id/txt_home_workdescrip"
        tools:text="2d"

        />


    <TextView
        android:id="@+id/txt_home_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_experience_title"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/txt_home_time"
        />


</RelativeLayout>
