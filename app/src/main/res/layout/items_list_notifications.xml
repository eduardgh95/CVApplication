<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/img_notif_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/img_avatar_perfil"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"

        android:layout_alignTop="@+id/txt_notific_content"

        />


    <TextView
        android:id="@+id/txt_notific_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_experience_title"
        android:layout_toRightOf="@+id/img_notif_profile"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        tools:text="We found similar jobs for you"
        />


    <TextView
        android:id="@+id/txt_notific_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"


        android:layout_toRightOf="@+id/img_notif_profile"
        android:layout_below="@+id/txt_notific_content"
        android:gravity="end"

        tools:text="2d"

        />





</RelativeLayout>
